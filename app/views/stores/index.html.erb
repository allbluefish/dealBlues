<% title "Dealblues Best Deals Online - Daily Deals at dealblues | new deals | sales | coupons | all shops" %>
<% meta "Dealblues Best Deals Online - Daily Deals at dealblues |  new deals | sales | coupons |all shops" %>
<div class="row-fluid">
  <div class="span10 top">
    <h2>All Stores</h2>
    <% @abc.each do |abc| %>
        <ul class="unstyled">
          <li class="thumbnail">
            <h3><%= abc.first %></h3>

            <p style="margin: 5px 0;">
              <% @stores.each do |s| %>
                  <% if s.start_with(abc) %>
                      <a href="/stores/<%= s.id %>/deals"><%= s.name %></a>&nbsp;(<%= s.count %>)&nbsp;
                  <% end %>
              <% end %>
            </p>
          </li>
        </ul>
    <% end %>
  </div>
  <div class="span2">
    <div class="well" style="padding: 8px 0;">
      <ul class="nav nav-list">
        <li class="nav-header">Hot Stores</li>
        <% @hot_stores.each do |s| %>
            <li><a href="/stores/<%= s.id%>/deals" title="<%= s.name %>"><%= truncate(s.name, :length => 18, :separator => ' ') %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
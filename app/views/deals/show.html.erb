<div class="row">
  <div class="span12">
    <ul class="breadcrumb">
      <li>
        <a href="/deals">All Deals</a> <span class="divider">></span>
      </li>
      <li>
        <a href="/stores/<%= @store.id %>/deals"><%= @store.name %></a>&nbsp;Product<span class="divider">></span>
      </li>
      <li><a href="/categories/<%= @category.id %>/deals"><%= @category.name %></a></li>
    </ul>
  </div>
</div>
<div class="row-fluid">
  <div class="span10">
    <div class="row">
      <div class="span3">
        <div class="imgbox">
          <img src="<%= @deal.image %>" alt="" title="" style="width: 200px;height: 200px;">
        </div>
      </div>
      <div class="span7">
        <h3><a href=""><%= @deal.title %></a></h3>

        <p><h4>Description:</h4>
        <% converter = Iconv.new 'UTF-8//IGNORE', 'UTF-8'
           value = converter.iconv(@deal.description_pure) %>
        <%= value %>
        </p>

        <h4>Categories:</h4>

        <p>
          <% @deal.categories.each_with_index do |c, index| %>
              <!--<a href="/categories/<%= c.id %>/deals" title="<%= c.name %>"><%= c.name %></a>
            <% if index +1 != @deal.categories.size %>|
            <% end %>-->
              <span class="label"><%= c.name %></span>
              <% if (index+1)%5==0 %><br/><p></p>
              <% end %>
          <% end %>
          </p>

          <p><h4>Stores:</h4>
          <span class="label"><%= @deal.store.name %></span>
          </p>

          <p><i class="icon-time"></i>&nbsp;<%= time_ago_in_words(@deal.pubDate) %> ago -
            <span style="color: #369BD7;"><%= @deal.source %></span>
            &nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-primary btn-large" href="<%= @deal.location %>"><i class="icon-shopping-cart icon-white"></i>
            Go Deals &raquo;</a></p>
          </div>
    </div>
    <section class="row">
      <div class="span10">
        <div class="tabbable" style="margin-bottom: 18px;">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1" data-toggle="tab"><%= @deal.store.name %></a></li>
            <% @deal.categories.each_with_index do |c, index| %>
                <% if index +1 <= 4 %>
                    <li><a href="#tab<%= index+2 %>" data-toggle="tab"><%= c.name %></a></li>
                <% end %>
            <% end %>
          </ul>
          <div class="tab-content" style="padding-bottom: 9px; border-bottom: 1px solid #ddd;">
            <div class="tab-pane active" id="tab1">
              <ul class="thumbnails">
                <% @store_deals.each do |d| %>
                    <li class="span2">
                      <div class="thumbnail">
                        <a href="/deals/<%= d.id %>"><img src="<%= d.image %>" alt="" title="" class="image_list"></a>

                        <div class="caption">
                          <h5><a href="/deals/<%= d.id %>"><%= truncate(d.title, :length => 15) %></a></h5>
                        </div>
                      </div>
                    </li>
                <% end %>
                <li class="span10"><p class="pull-right"><a class="btn btn-primary btn-small" href="/stores/<%= @store.id%>/deals">More Deals</a></li>
              </ul>
            </div>
            <div class="tab-pane" id="tab2">
              <p></p>
            </div>
            <div class="tab-pane" id="tab3">
              <p></p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <div class="span2">
    <!-- <div class="well" style="padding: 8px 0;">
      <ul class="nav nav-list">
        <li class="nav-header">
          Hot Products
        </li>
        <li class="active">
          <a href="#">Home</a>
        </li>
        <li>
          <a href="#">Library</a>
        </li>
        ...
      </ul>
    </div>-->
    <div class="well" style="padding: 8px 0;">
      <ul class="nav nav-list">
        <li class="nav-header">Hot Categories</li>
        <% @categories.each do |c| %>
            <li><a href="/categories/<%= c.id %>/deals" title="<%= c.name %>"><%= truncate(c.name, :length => 18, :separator => ' ') %></a>
            </li>
        <% end %>
        <!--<li><a href="">+more</a></li>-->
      </ul>
    </div>
    <div class="well" style="padding: 8px 0;">
      <ul class="nav nav-list">
        <li class="nav-header">Hot Stores</li>
        <% @stores.each do |s| %>
            <li><a href="#" title="<%= s.name %>"><%= truncate(s.name, :length => 18, :separator => ' ') %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>